  "devDependencies": {
    "address": "^1.0.3",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-preset-stage-3": "^6.24.1",
    "concurrently": "^4.0.1",
